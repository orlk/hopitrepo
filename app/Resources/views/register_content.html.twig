{% trans_default_domain 'FOSUserBundle' %}
<div class="container" style=" margin-top: 4%;">

    <div class="row">
        <div class="col-xs-12 col-sm-8 col-md-6 col-sm-offset-2 col-md-offset-3">
            <form  role="form" action="{{ path('fos_user_registration_register') }}" {{ form_enctype(form) }} method="POST" class="fos_user_registration_register">
                <h2 style="font-size: 30PX;margin-left: 10%;color: rgb(51, 122, 183);" > Inscrivez-Vous<small  style="font-size: 18px;margin-left: 9px;">C'est gratuit et le sera toujours.</small></h2>
                <hr class="colorgraph">




                <div class="form-group">
                    {# Génération de l'input. #}
                    {{ form_widget(form.email, {'attr': { 'class': 'form-control input-lg','id':"inputEmail",'placeholder':"Email Address",'tabindex':"4"}}) }}
                    {# Affichage des erreurs pour ce champ précis. #}
                    {{ form_errors(form.email) }}
                </div>


                <div class="form-group">

                    {# Génération de l'input. #}
                    {{ form_widget(form.username, {'attr': {'class': 'form-control input-lg','id':"display_name",'placeholder':"Nom d'utilisateur",'tabindex':"4"}}) }}
                    {# Affichage des erreurs pour ce champ précis. #}

                    <span class="help-inline">    {{ form_errors(form.username) }}   </span>

                </div>

                <div class="row">
                    <div class="col-xs-12 col-sm-6 col-md-6">

                        <div class="form-group">

                            {{ form_widget(form.plainPassword.first, { 'attr': {'class': 'form-control input-lg','placeholder':"Mot de passe ",'tabindex':"6"}}) }}
                            {{ form_errors(form.plainPassword.first) }}
                        </div>



                    </div>
                    <div class="col-xs-12 col-sm-6 col-md-6">
                        <div class="form-group">
                            {{ form_widget(form.plainPassword.second, { 'attr': {'class': 'form-control input-lg','placeholder':"confirmer Mot de passe ",'tabindex':"6"}}) }}
                            {{ form_errors(form.plainPassword.second) }}
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-xs-4 col-sm-3 col-md-3">
                        <span class="button-checkbox">
                            <button type="button" class="btn" data-color="info" tabindex="7">I Agree</button>
                            <input type="checkbox" name="t_and_c" id="t_and_c" class="hidden" value="1">
                        </span>
                    </div>
                    <div class="col-xs-8 col-sm-9 col-md-9">
                        By clicking <strong class="label label-primary">Register</strong>, you agree to the <a href="#" data-toggle="modal" data-target="#t_and_c_m">Terms and Conditions</a> set out by this site, including our Cookie Use.
                    </div>
                </div>
                <hr class="colorgraph">


                <div class="row">
                    <div class="col-xs-12 col-md-6">  <input type="submit" value="{{ 'registration.submit'|trans }}" class="btn btn-primary btn-block btn-lg" tabindex="7"/>  {{ form_rest(form) }}  </div>
                    <div class="col-xs-12 col-md-6"><a href="{{ path('fos_user_security_login') }}" class="btn btn-success btn-block btn-lg">Sign In</a></div>
                </div>

            </form>
        </div>
    </div>      
