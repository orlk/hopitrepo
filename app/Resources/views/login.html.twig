{% extends "FOSUserBundle::layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}
{% block fos_user_content %}
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
    {%block nav %}  {% endblock %}

    <div class="container">
        <form class="form-signin" action="{{ path("fos_user_security_check") }}" method="post">
            <h2 class="form-signin-heading"   style=" margin-bottom: 5%;margin-top: 46%;margin-left: 17%; font-size: 224%; font-style: italic; font-family: fantasy; font-variant: normal;color: rgb(51, 122, 183);">Please sign in</h2>
            <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
            <label for="username" class="sr-only" >{{ 'security.login.username'|trans }}</label>
            <div class="form-group has-feedback ">
                <input  type="text" id="username" name="_username" value="{{ last_username }}" required="required" class="form-control "placeholder="Nom utilisateur" autofocus/>
                <i class="fa fa-user form-control-feedback  fa-2x"  style=" top: 15%;"></i>
            </div>

            <div class="form-group has-feedback">
                <label for="password"  class="sr-only">{{ 'security.login.password'|trans }}</label>
                <input type="password" id="password" name="_password" required="required" class="form-control" placeholder="Password"/>
                <i class="fa fa-key fa-fw  form-control-feedback  fa-2x"  style=" top: 15%;"></i>
            </div>
            <div class="checkbox">
                <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
                <label for="remember_me"style="margin-right: 10%; margin-left: -8%;">{{ 'security.login.remember_me'|trans }}</label>
                <a href="{{ path('fos_user_resetting_request') }}">Forgot password ?</a>
            </div>
            <input  class="btn btn-lg btn-primary btn-block" type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" />
            <a href="{{ path('fos_user_registration_register') }}" class="btn btn-lg btn-success btn-block" type="submit" id="_submit" name="_submit" value="Inscription" >Inscription</a>
        </form>

    </div>

{% endblock fos_user_content %}
